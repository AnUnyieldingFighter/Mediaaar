<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.images.imageselect">

    <application
        android:allowBackup="true"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true">
        <!--//指向v4包里的FileProvider类  -->
        <!--//对应你的content uri的基础域名，生成的uri将以content://com.example.myapp作为开头-->
        <!--//设置不允许导出-->
        <!--//设置允许获取访问uri的临时权限-->

        <provider
            android:name="media.library.images.ui.provider.OptionFileProvider"
            android:authorities="${applicationId}"
            android:exported="false"
            android:grantUriPermissions="true">
            <!--//用于设置FileProvider的文件访问路径-->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths" />
        </provider>
        <!--google 图片选择器-->
        <activity
            android:name="media.library.google.GoogleImgVideoAct"
            android:screenOrientation="portrait"
            android:theme="@style/ImgVideoTransparentTheme"
            tools:ignore="DiscouragedApi" />
        <!--视频相关-->
        <activity
            android:name="media.library.player.act.TestVideoAct2"
            android:screenOrientation="portrait"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name="media.library.player.act.TestVideoAct"
            android:screenOrientation="portrait"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name="media.library.player.act.TestVideoOneAct"
            android:screenOrientation="portrait"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name="media.library.player.act.TestVideoStartAct"
            android:screenOrientation="portrait"
            tools:ignore="DiscouragedApi" />

        <activity
            android:name="media.library.player.act.TestVideoPlaysAct"
            android:screenOrientation="portrait"
            tools:ignore="DiscouragedApi,MissingClass" />
        <!--视频相关结束-->
    </application>

</manifest>