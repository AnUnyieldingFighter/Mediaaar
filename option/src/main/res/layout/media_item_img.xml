<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_media"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:src="@mipmap/image_select_default" />

    <TextView
        android:id="@+id/tv_opt"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignRight="@+id/iv_media"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/media_select_false"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="1" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_media"
        android:layout_alignBottom="@+id/iv_media"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/media_type"
        android:gravity="center"
        android:paddingHorizontal="4dp"
        android:textColor="#fff"
        android:textSize="11sp"
        android:textStyle="bold"
        tools:text="GIF" />

    <View
        android:id="@+id/view_no_opt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_media"
        android:layout_alignTop="@+id/iv_media"
        android:layout_alignRight="@+id/iv_media"
        android:layout_alignBottom="@+id/iv_media"
        android:background="#33000000" />
</RelativeLayout>
